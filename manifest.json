{
  "manifest_version": 3,
  "name": "Waffle",
  "description": "엔트리 이야기에서 이미지를 쉽게 공유할 수 있도록 해주는 확장 프로그램입니다.",
  "version": "0.5.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://playentry.org/*"],
  "content_scripts": [
    {
      "matches": ["https://playentry.org/*"],
      "all_frames": true,
      "css": ["waffle.css"],
      "js": ["purify.js", "lib.js", "waffle.js"]
    }
  ]
}
